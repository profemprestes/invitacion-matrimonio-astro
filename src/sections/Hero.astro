---
import "../styles/hero.css";
import AnimatedImage from '@/components/AnimatedImage.astro'; // Componente para la imagen animada
---

<section class="hero">
    <div class="hero__background">
        <img id="parallax-hero" src="/herogalia.gif" alt="Imagen de fondo con efecto parallax" />
    </div>

    <div class="hero__card">
        <AnimatedImage src="/sobremi.gif" alt="Imagen animada de Galia" class="hero__animated-image" />
        <div class="hero__info">
            <p class="hero__greeting">¡Acompáñame a celebrar!</p>
            <h1 class="hero__celebration">
                Mi <span class="hero__age">Primer Añito</span>
            </h1>
            <p class="hero__name">Soy Galia</p>
            <p class="hero__event-details">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="hero__icon hero__icon--location">
                    <path fill-rule="evenodd" d="M11.54 22.351l.071-.039a.975.975 0 01.892 0l.071.039a16.975 16.975 0 01-1.734 0zM12 3a5.5 5.5 0 00-5.5 5.5c0 2.148 1.224 4.145 2.926 5.504a.75.75 0 011.05 1.028l.621.585a.75.75 0 010 1.05l-.621.585a.75.75 0 01-1.05 1.028A7 7 0 016.5 8.5a7 7 0 017-7 7 7 0 017 7c0 1.79-.683 3.447-1.932 4.801a.75.75 0 01-1.05-1.028l-.621-.585a.75.75 0 010-1.05l.621-.585a.75.75 0 011.05 1.028A5.5 5.5 0 0017.5 8.5a5.5 5.5 0 00-5.5-5.5z" clip-rule="evenodd" />
                </svg>
                Club Ciclista Juanico
            </p>
            <p class="hero__event-details">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="hero__icon hero__icon--time">
                    <path fill-rule="evenodd" d="M12 2.25c-5.385 0-9.75 4.365-9.75 9.75s4.365 9.75 9.75 9.75 9.75-4.365 9.75-9.75S17.385 2.25 12 2.25zM12 8.25a1 1 0 01.75.438l2.25 2.25a1 1 0 01-1.438 1.438L12 10.938l-1.563 1.562a1 1 0 11-1.438-1.438l2.25-2.25A1 1 0 0112 8.25z" clip-rule="evenodd" />
                </svg>
                10 de Mayo de 2024 | 13:00 - 18:00
            </p>
            <div class="hero__invitation">
                <p class="hero__invitation-text">
                    ¡Tu presencia hará este día aún más especial!
                </p>
            </div>
        </div>
        <div class="hero__scroll-indicator">
            <span class="hero__scroll-text">Desliza para ver más</span>
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="hero__scroll-arrow">
                <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 5.25l-7.5 7.5-7.5-7.5m15 6l-7.5 7.5-7.5-7.5" />
            </svg>
        </div>
    </div>
</section>

<style>
    /* Estilos para el componente AnimatedImage (si es necesario) */
    .hero__animated-image {
        max-width: 150px; /* Ajusta el tamaño según necesites */
        height: auto;
        margin-bottom: 20px;
        border-radius: 10px; /* O la forma que desees */
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
    }
</style>