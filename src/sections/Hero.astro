---
// importación de estilos CSS
import '../styles/css/sections/Hero.css';
---

<header class="hero-section" aria-label="Sección principal de bienvenida">
  <!-- Fondo animado/parallax -->
  <figure class="hero-background-container" aria-hidden="true">
    <img src="/herogalia.gif" id="parallax-hero" alt="" class="hero-background" loading="lazy" />
  </figure>

  <!-- Contenido principal -->
  <div class="info-hero">
    <div class="hero-content">
      <h2 class="hero-name">Soy Galia</h2>

      <h1 class="hero-title">
        Festejo mi<br />
        <span>Primer Añito</span>
      </h1>

      <p class="hero-date" role="contentinfo">🎉 10 de Mayo de 2024</p>

      <blockquote class="hero-quote">
        <p>
          Me encantaría que vinieras a celebrar
          <br class="mobile-break" />
          mi primer año.<br />
          <strong>¡Será especial contigo!</strong>
        </p>
      </blockquote>

      <!-- Botón de llamada a la acción -->
      <div class="cta-container">
        <a href="#rsvp" class="cta-image-link" aria-label="Confirmar asistencia">
          <img
            src="/galia/galiahamaca.webp"
            alt="Galia invitando a la celebración"
            class="cta-image"
            loading="lazy"
          />
        </a>
        <p class="cta-caption">Hacé clic en la imagen para confirmar asistencia</p>
      </div>

      <!-- Cierre emocional -->
      <footer class="hero-footer" role="contentinfo">
        <p>¡Nos vemos pronto para celebrar juntos!</p>
      </footer>
    </div>
  </div>
</header>
