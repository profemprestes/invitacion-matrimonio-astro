---
import Title from '@/components/Title.astro';
import InstagramIcon from '@/icons/InstagramIcon.astro';
---

<section>
  <div
    class="phone:w-full phone:px-2 desktop:mb-14 desktop:mt-24 text-color01 mx-auto mb-12 mt-12 flex max-w-[1140px] flex-col items-center justify-center gap-3"
  >
    <Title title="Compartimos este día junto a ti" />
    <span class="font-rubik desktop:text-xl text-center font-extralight text-gray-400">
      Comparte tus fotos y videos de este hermoso día
    </span>
    <InstagramIcon class="mt-6 w-16" />
    <p class="font-raleway text-color03 desktop:text-6xl text-4xl">@dahilua</p>
    <a
      href="https://www.instagram.com/dahilua/"
      class="bg-color01 text-color02 mt-10 min-w-40 max-w-40 translate-x-2 rounded-3xl py-3 text-center transition"
      target="_blank"
    >
      Ver en Instagram
    </a>
  </div>
</section>

<style>
  a:hover {
    background-color: rgb(195 128 11 / 73%);
    @apply animate-pulsing;
  }
</style>
