---
import Layout from '@/layouts/Layout.astro';
import Hero from '@/sections/Hero.astro';
import PrincipalDate from '@/sections/PrincipalDate.astro';
import Presentacion from '@/sections/Presentacion.astro';
import '../styles/css/index.css';
---

<Layout title="Cumple de Galia">
  <main id="presentacion-section" aria-label="Presentación de Galia">
    <Presentacion />
  </main>

  <main id="main-content" class="hidden" aria-label="Contenido principal">
    <Hero />
    <section class="p-4">
      <PrincipalDate />
    </section>
  </main>
</Layout>

<script is:inline>
document.addEventListener('DOMContentLoaded', () => {
  const presentacionSection = document.getElementById('presentacion-section');
  const mainContent = document.getElementById('main-content');

  // Función para mostrar el contenido principal
  window.showMainContent = () => {
    if (presentacionSection) {
      presentacionSection.classList.add('hidden');
    }
    if (mainContent) {
      mainContent.classList.remove('hidden');
      mainContent.scrollIntoView({ behavior: 'smooth' });
    }
  };
});
</script>
<script is:inline src="/src/js/main.js"></script>

