{
  "name": "invitaciones-infantiles",
  "type": "module",
  "version": "0.0.1",
  "description": "Aplicación web moderna para crear invitaciones digitales para cumpleaños infantiles, con diseño responsive y experiencia interactiva personalizable",
  "author": {
    "name": "Matías Prestes",
    "email": "profemprestes@gmail.com",
    "url": "https://github.com/profemprestes"
  },
  "license": "MIT",
  "homepage": "https://galiacumple.netlify.app",
  "repository": {
    "type": "git",
    "url": "https://github.com/profemprestes/invitaciones-infantiles"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "dev": "astro dev",
    "start": "astro start",
    "build": "cross-env NODE_OPTIONS='--max-old-space-size=4096' astro build",
    "preview": "astro preview",
    "clean": "rimraf node_modules pnpm-lock.yaml && rimraf dist --no-glob",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx,.astro",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx,.astro --fix",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,astro,css,md,json}\"",
    "check": "npm run lint && npm run format"
  },
  "keywords": [
    "astro",
    "react",
    "tailwindcss",
    "invitacion",
    "cumpleaños",
    "infantil"
  ],
  "dependencies": {
    "@astrojs/netlify": "^3.1.1",
    "@astrojs/react": "^3.6.3",
    "@astrojs/sitemap": "^3.0.3",
    "@astrojs/tailwind": "^5.1.5",
    "@astrojs/ts-plugin": "^1.3.1",
    "@fontsource-variable/raleway": "^5.0.16",
    "@fontsource-variable/rubik": "^5.0.17",
    "@fontsource/parisienne": "^5.0.8",
    "@heroui/react": "2.7.6",
    "@midudev/tailwind-animations": "^0.0.7",
    "astro": "^3.6.5",
    "astro-compress": "^2.2.3",
    "astro-robots-txt": "^1.0.0",
    "framer-motion": "^11.18.2",
    "lucide-react": "^0.294.0",
    "prop-types": "^15.8.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.48.2"
  },

  "devDependencies": {
  "@types/react": "^18.3.20",
  "@types/react-dom": "^18.3.6",
  "@typescript-eslint/eslint-plugin": "^7.3.0",
  "@typescript-eslint/parser": "^7.3.0",
  "autoprefixer": "^10.4.16",
  "cross-env": "^7.0.3",
  "cssnano": "^6.0.3",
  "eslint": "^8.57.0",
  "eslint-config-prettier": "^9.1.0",
  "eslint-plugin-astro": "^0.31.4",
  "eslint-plugin-jsx-a11y": "^6.8.0",
  "eslint-plugin-prettier": "^5.1.3",
  "eslint-plugin-react": "^7.34.0",
  "eslint-plugin-react-hooks": "^4.6.0",
  "postcss": "^8.4.31",
  "postcss-custom-media": "^10.0.2",
  "postcss-import": "^15.1.0",
  "postcss-nesting": "^12.1.5",
  "prettier": "^3.2.5",
  "prettier-plugin-astro": "^0.13.0",
  "rimraf": "^5.0.10",
  "tailwindcss": "^3.4.17"
  }
  
  "browserslist": [
    ">0.2%",
    "not dead",
    "not op_mini all"
  ]
}
